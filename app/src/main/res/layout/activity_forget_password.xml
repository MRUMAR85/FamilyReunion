<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="156dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="224dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="226dp"
            android:layout_height="27dp"
            android:layout_marginStart="40dp"
            android:text="Select verification method and we will send verification code"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="156dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="394dp"
            android:layout_height="134dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="130dp"
                android:layout_height="28dp"
                android:text="Phone Number"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Send code to your phone number"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="92dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="68dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/img_5"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="69dp"
                android:layout_height="49dp"
                app:srcCompat="@drawable/img_6"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="113dp"
                android:layout_height="26dp"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="193dp"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:text="Send code to your email address"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="42dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="21dp"
                android:layout_height="26dp"
                android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
                android:background="@drawable/black_border_button"
                android:text=""
                tools:layout_editor_absoluteX="300dp"
                tools:layout_editor_absoluteY="29dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="21dp"
                android:layout_height="26dp"
                android:drawableLeft="@drawable/baseline_arrow_forward_ios_24"
                android:background="@drawable/black_border_button"
                android:text=""
                tools:layout_editor_absoluteX="300dp"
                tools:layout_editor_absoluteY="79dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:background="@drawable/round_corner_button"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.814" />


</androidx.constraintlayout.widget.ConstraintLayout>