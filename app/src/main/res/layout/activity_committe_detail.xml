<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <ImageView
         android:id="@+id/back_button"
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/ic_back_arrow"
         android:layout_below="@id/time"
         android:layout_alignParentStart="true"
         android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/committee_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committee Details"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/back_button"
        android:layout_alignBottom="@id/back_button"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/committee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committee Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/committee_details"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/committee_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Ut amet neque tincidunt vel fames faucibus sed facilisi nunc. Ipsum dui sed facilisis mauris velit. Sit viverra adipiscing ut amet vel. Mi velit gravida est viverra fringilla. Feugiat integer faucibus amet libero orci enim integer. Tristique et sed scelerisque sit mauris augue tortor et. Massa scelerisque sed erat nunc in adipiscing tellus. Gravida vestibulum eu venenatis fames sed lectus."
        android:textSize="16sp"
        android:layout_below="@id/committee_name"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/to_do_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_do_item_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="2. To do item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/to_do_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_do_list_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="1. To do item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/to_do_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/committee_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="To-Do List:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_poll_button"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_below="@id/to_do_item_2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@id/group_chat_button"
        android:background="@drawable/round_corner_button"
        android:text="Create Poll/Survery" />

    <Button
        android:id="@+id/group_chat_button"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_below="@id/to_do_item_2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corner_button"
        android:text="Group Chat" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_chat_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Edit" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_poll_button"
        android:layout_marginStart="90dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@id/edit_button"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Delete" />
</RelativeLayout>
