<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <ImageView
         android:id="@+id/back_button"
         android:layout_width="24dp"
         android:layout_height="24dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_back_arrow"
         android:layout_below="@id/time"
         android:layout_alignParentStart="true"
         android:layout_marginTop="16dp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/committee_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/committee_details"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/back_button"
        android:layout_alignBottom="@id/back_button"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/committee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c_n"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/committee_details"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/committee_description"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="@string/c_fd"
        android:textSize="15sp"
        android:layout_below="@id/committee_name"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:ignore="VisualLintLongText" />

    <TextView
        android:id="@+id/to_do_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_do_item_1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:textColor="@color/gray"
        android:layout_marginTop="6dp"
        android:text="@string/_2_to_do_item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/to_do_item_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_below="@id/to_do_list_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/_1_to_do_item"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/to_do_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/committee_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/to_do_list"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_poll_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_do_item_2"
        android:layout_marginStart="37dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@id/group_chat_button"
        android:background="@drawable/round_corner_button"
        android:text="@string/create_poll_survery" />

    <Button
        android:id="@+id/group_chat_button"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:layout_below="@id/to_do_item_2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corner_button"
        android:text="@string/group_chat" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_chat_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/edit" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_poll_button"
        android:layout_marginStart="77dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@id/edit_button"
        android:backgroundTint="@color/purple_500"
        android:text="@string/delete" />
</RelativeLayout>
